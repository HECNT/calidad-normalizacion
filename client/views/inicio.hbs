<div class="ui container" ng-controller="homeCtrl" ng-init="init()">
  <div class="ui active page dimmer" ng-show="false">
    <div class="ui indeterminate large text loader">Cargando...</div>
  </div>
  <div class="ui row">
    <div class="ui grid">
      <div class="four wide column">
        <div class="ui segment">
          <h2 class="ui header">Bienvenido a no se :v</h2>
          <div class="ui clearing divider"></div>
          <!--  INICIA LIST PERFIL -->
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/man.png">
                <div class="content">
                  <a class="header">Hola de nuevo</a>
                  <div class="description">Usuario tal</div>
                </div>
              </div>
            </div>
          <!--  TERMINA LIST PERFIL -->
          <div class="ui divider"></div>
          <!--  INICIA LIST GENERAL -->
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/man.png">
                <div class="content">
                  <a class="header">Ver viajes</a>
                  <div class="description">Ver viajes activos</div>
                </div>
              </div>
            </div>
          <!--  TERMINA LIST GENERAL -->
        </div>
      </div>
      <div class="twelve wide column">
        <div class="ui segment">
          <h2 class="ui right floated header">Mi inicio</h2>
          <div class="ui clearing divider"></div>
          <h4>Viajes</h4>
          <div class="ui icon input">
            <input type="text" placeholder="Buscar..." ng-model="buscar">
            <i class="search icon"></i>
          </div>
          <table class="ui table blue">
            <thead>
              <th>#</th>
              <th>Fecha inicio</th>
              <th>Fecha fin</th>
              <th>Tipo Vehiculo</th>
              <th>Estatus</th>
              <th>Detalles</th>
            </thead>
            <tbody>
              <tr ng-repeat="l in inicio.list | filter:buscar">
                <td>{[l.vehiculo_id]}</td>
                <td>{[l.ini]}</td>
                <td>{[l.fin]}</td>
                <td>{[l.tipo]}</td>
                <td>{[l.estatus]}</td>
                <td>
                  <button type="button" name="button" class="ui button mini " onclick="$('#modal-detalle').modal('show')">
                    <i class="eye icon"></i>
                    Ver detalles
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="ui modal" id="modal-detalle">
    <div class="header">Detalles del viaje</div>
    <div class="content">
      Hola
    </div>
    <div class="actions">
      <button type="button" name="button" class="ui button blue" onclick="$('#modal-detalle').modal('hide')">Cerrar</button>
    </div>
  </div>
</div>
