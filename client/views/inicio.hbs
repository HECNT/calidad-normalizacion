<div style="padding-left: 100px; padding-right: 100px" ng-controller="homeCtrl" ng-init="init()">
  <div class="ui active page dimmer" ng-show="inicio.loading">
    <div class="ui indeterminate large text loader">Cargando...</div>
  </div>
  <div class="ui row">
    <div class="ui grid">
      <div class="four wide column">
        <div class="ui segment">
          <h2 class="ui header">Bienvenido a no se :v</h2>
          <div class="ui clearing divider"></div>
          <!--  INICIA LIST PERFIL -->
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/man.png">
                <div class="content">
                  <a class="header">Hola de nuevo</a>
                  <div class="description">Usuario tal</div>
                </div>
              </div>
            </div>
          <!--  TERMINA LIST PERFIL -->
          <div class="ui divider"></div>
          <!--  INICIA LIST GENERAL -->
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/world.png">
                <div class="content">
                  <a class="header" ng-click="btnGetDatos(1)">Ver viajes</a>
                  <div class="description">Ver viajes activos</div>
                </div>
              </div>
            </div>
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/monitor.png">
                <div class="content">
                  <a class="header" ng-click="btnGetDatos(2)">Ver monitoreo</a>
                  <div class="description">Ver monitoreos</div>
                </div>
              </div>
            </div>
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/crane.png">
                <div class="content">
                  <a class="header" ng-click="btnGetDatos(3)">Ver taller</a>
                  <div class="description">Ver vehiculos en taller</div>
                </div>
              </div>
            </div>
            <div class="ui list">
              <div class="item">
                <img class="ui avatar image" src="{{url}}img/car.png">
                <div class="content">
                  <a class="header" ng-click="btnGetDatos(4)">Ver vehiculos</a>
                  <div class="description">Ver vehiculos de la flotilla</div>
                </div>
              </div>
            </div>
          <!--  TERMINA LIST GENERAL -->
        </div>
      </div>
      <div class="twelve wide column">
        <div class="ui segment">
          <h2 class="ui right floated header">Mi inicio</h2>
          <div class="ui clearing divider"></div>
          <h4>{[inicio.msj]}</h4>
          <div class="ui icon input">
            <input type="text" placeholder="Buscar..." ng-model="buscar">
            <i class="search icon"></i>
          </div><br><br>

          <div ng-show="inicio.show.viaje">
            <button type="button" name="button" class="ui button mini green right floated">Agregar nuevo viaje</button><br>
            <table class="ui table blue">
              <thead>
                <th>#</th>
                <th>Fecha inicio</th>
                <th>Fecha fin</th>
                <th>Tipo Vehiculo</th>
                <th>Estatus</th>
                <th>Detalles</th>
              </thead>
              <tbody>
                <tr ng-repeat="l in inicio.list | filter:buscar">
                  <td>{[l.vehiculo_id]}</td>
                  <td>{[l.ini]}</td>
                  <td>{[l.fin]}</td>
                  <td>{[l.tipo]}</td>
                  <td>{[l.estatus]}</td>
                  <td>
                    <button type="button" name="button" class="ui button mini " ng-click="btnGetDetalle()">
                      <i class="eye icon"></i>
                      Ver detalles
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div ng-show="inicio.show.monitoreo">
            <button type="button" name="button" class="ui button mini green right floated">Agregar nuevo monitoreo</button><br>
            <table class="ui table blue">
              <thead>
                <th>#</th>
                <th>Vehiculo</th>
                <th>Fecha monitoreo</th>
                <th>Nota</th>
                <th>Usuario</th>
                <th>Estatus</th>
              </thead>
              <tbody>
                <tr ng-repeat="l in inicio.list | filter:buscar">
                  <td>{[l.monitoreo_id]}</td>
                  <td>{[l.vehiculo]}</td>
                  <td>{[l.fecha]}</td>
                  <td>{[l.nota]}</td>
                  <td>{[l.usuario]}</td>
                  <td>{[l.estatus]}</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div ng-show="inicio.show.taller">
            <button type="button" name="button" class="ui button mini green right floated">Agregar nuevo vehiculo a taller</button><br>
            <table class="ui table blue">
              <thead>
                <th>#</th>
                <th>Vehiculo</th>
                <th>Fecha inicio</th>
                <th>Estatus vehiculo</th>
                <th>Falla</th>
                <th>Estatus falla</th>
                <th>Taller</th>
              </thead>
              <tbody>
                <tr ng-repeat="l in inicio.list | filter:buscar">
                  <td>{[l.vehiculo_id]}</td>
                  <td>{[l.vehiculo]}</td>
                  <td>{[l.ini]}</td>
                  <td>{[l.estatus_vehiculo]}</td>
                  <td>{[l.falla]}</td>
                  <td>{[l.estatus_falla]}</td>
                  <td>{[l.taller]}</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div ng-show="inicio.show.vehiculo">
            <button type="button" name="button" class="ui button mini green right floated">Agregar nuevo vehiculo</button><br>
            <table class="ui table blue">
              <thead>
                <th>#</th>
                <th>Vehiculo</th>
                <th>Usuario alta</th>
                <th>Activo</th>
                <th>Tipo</th>
                <th>Estatus</th>
              </thead>
              <tbody>
                <tr ng-repeat="l in inicio.list | filter:buscar">
                  <td>{[l.vehiculo_id]}</td>
                  <td>{[l.vehiculo]}</td>
                  <td>{[l.usuario_alta]}</td>
                  <td>
                    <img src="{{url}}img/checked.png" ng-show="l.activo*1 === 1" width="50px" height="50px">
                    <img src="{{url}}img/x-button.png" ng-show="l.activo*1 === 0">
                  </td>
                  <td>{[l.tipo]}</td>
                  <td>{[l.estatus]}</td>
                </tr>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>
  <!-- INICIA MODAL -->
  <div class="ui modal tiny" id="modal-detalle">
    <div class="header">Detalles del viaje</div>
    <div class="content">

    </div>
    <div class="actions">
      <button type="button" name="button" class="ui button green" onclick="$('#modal-detalle').modal('hide')">Agregar</button>
      <button type="button" name="button" class="ui button blue" onclick="$('#modal-detalle').modal('hide')">Cerrar</button>
    </div>
  </div>

  <div class="ui modal tiny" id="modal-monitoreo">
    <div class="header">Detalles del viaje</div>
    <div class="content">

    </div>
    <div class="actions">
      <button type="button" name="button" class="ui button green" onclick="$('#modal-detalle').modal('hide')">Agregar</button>
      <button type="button" name="button" class="ui button blue" onclick="$('#modal-detalle').modal('hide')">Cerrar</button>
    </div>
  </div>

  <div class="ui modal tiny" id="modal-viaje">
    <div class="header">Detalles del viaje</div>
    <div class="content">

    </div>
    <div class="actions">
      <button type="button" name="button" class="ui button green" onclick="$('#modal-detalle').modal('hide')">Agregar</button>
      <button type="button" name="button" class="ui button blue" onclick="$('#modal-detalle').modal('hide')">Cerrar</button>
    </div>
  </div>

  <div class="ui modal tiny" id="modal-taller">
    <div class="header">Detalles del viaje</div>
    <div class="content">

    </div>
    <div class="actions">
      <button type="button" name="button" class="ui button green" onclick="$('#modal-detalle').modal('hide')">Agregar</button>
      <button type="button" name="button" class="ui button blue" onclick="$('#modal-detalle').modal('hide')">Cerrar</button>
    </div>
  </div>
  <!-- TERMINA MODAL -->

</div>
